<configs>
	<append xpath="/gameevents">
		<!--give a 6 skill points to player = called from learn-by-use when a player reaches max level  for each Perk-->
		<action_sequence name="lbu_action_give_points">
			<action class="AddSkillPoints">
				<property name="skill_points" value="6"/>
			</action>
			<action class="BeltTooltip">
				<property name="text" value="Max Skill Level - 6 Skill Points!"/>
			</action>
		</action_sequence>
	</append>
</configs>